SubDir LUAPLUS Src Modules luaxmlrpc ;

IncludeModule copyfile ;

{

local XMLRPC_SRCS =
		cgi.lua
		http.lua
		serverproxy.lua
;

local ROOT_SRCS =
		xmlrpc.lua
;

LuaPlusAddSimpleModule luaxmlrpc : $(ROOT_SRCS) $(XMLRPC_SRCS) ;

local filename ;
for filename in $(ROOT_SRCS)
{
	CopyFile cosmo : $(LUA_LDIR)/$(filename:BS) : $(SUBDIR)/$(filename) ;
}

for filename in $(XMLRPC_SRCS)
{
	CopyFile cosmo : $(LUA_LDIR)/xmlrpc/$(filename:BS) : $(SUBDIR)/$(filename) ;
}

}

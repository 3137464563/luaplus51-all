SubDir LUAPLUS Src Modules cosmo ;

IncludeModule copyfile ;

{

local ROOT_LUAS =
		src/cosmo.lua
;

local COSMO_LUAS =
		src/cosmo/grammar.lua
		src/cosmo/fill.lua
;

LuaPlusAddSimpleModule cosmo : $(ROOT_LUAS) $(COSMO_LUAS) ;

local filename ;
for filename in $(ROOT_LUAS)
{
	CopyFile cosmo : $(LUA_LDIR)/$(filename:BS) : $(SUBDIR)/$(filename) ;
}

for filename in $(COSMO_LUAS)
{
	CopyFile cosmo : $(LUA_LDIR)/cosmo/$(filename:BS) : $(SUBDIR)/$(filename) ;
}

}
